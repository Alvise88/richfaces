<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/2.2.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/2.2.1 http://maven.apache.org/xsd/assembly-2.2.1.xsd">
    <id>richfaces</id>
    <formats>
        <format>zip</format>
    </formats>

    <files>
        <file>
            <source>src/main/resources/txt/lgpl.txt</source>
        </file>
        <file>
            <source>src/main/resources/txt/release-notes.txt</source>
        </file>
        <file>
            <source>src/main/resources/txt/readme.txt</source>
        </file>
        <file>
            <source>src/main/resources/txt/readme-examples.txt</source>
            <destName>examples/readme.txt</destName>
        </file>
    </files>

    <fileSets>
        <!-- bin & sources -->
        <fileSet>
            <directory>target/dependency</directory>
            <outputDirectory>artifacts/framework</outputDirectory>
            <includes>
                <include>richfaces-*.jar</include>
            </includes>
            <excludes>
                <exclude>richfaces-framework*</exclude>
                <exclude>richfaces-optimized-resources*/</exclude>
                <exclude>richfaces-archetype*</exclude>
            </excludes>
        </fileSet>

        <!-- lib -->
        <fileSet>
            <directory>target/dependency</directory>
            <outputDirectory>artifacts/lib</outputDirectory>
            <excludes>
                <exclude>richfaces-*</exclude>
                <exclude>richfaces-*/</exclude>
            </excludes>
        </fileSet>

        <!-- archetypes -->
        <fileSet>
            <directory>target/archetype</directory>
            <outputDirectory>artifacts/archetypes</outputDirectory>
        </fileSet>

        <!-- javadoc -->
        <fileSet>
            <directory>target/dependency/richfaces-framework-javadoc-jar</directory>
            <outputDirectory>docs/javadoc/</outputDirectory>
        </fileSet>

        <!-- vdldoc -->
        <fileSet>
            <directory>target/dependency/richfaces-framework-vdldoc-jar</directory>
            <outputDirectory>docs/vdldoc/</outputDirectory>
        </fileSet>

        <!-- jsdoc -->
        <fileSet>
            <directory>target/dependency/richfaces-framework-jsdoc-jar</directory>
            <outputDirectory>docs/jsdoc/</outputDirectory>
        </fileSet>

        <!-- Examples -->
        <fileSet>
            <directory>target/dependency</directory>
            <outputDirectory>examples/</outputDirectory>
            <includes>
                <include>richfaces-showcase*.war</include>
                <include>richfaces-photoalbum*.war</include>
            </includes>
        </fileSet>

        <!-- Archetypes -->
        <fileSet>
            <directory>target/dependency/richfaces-archetype-simpleapp-jar</directory>
            <outputDirectory>archetypes/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>target/dependency/richfaces-archetype-kitchensink-jar</directory>
            <outputDirectory>archetypes/</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>
