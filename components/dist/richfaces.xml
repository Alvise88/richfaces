<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/2.2.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/2.2.1 http://maven.apache.org/xsd/assembly-2.2.1.xsd">
    <id>richfaces</id>
    <formats>
        <format>zip</format>
    </formats>

    <files>
        <file>
            <source>lgpl.txt</source>
        </file>
        <file>
            <source>release-notes.txt</source>
        </file>
        <file>
            <source>readme.txt</source>
        </file>
    </files>

    <fileSets>
        <fileSet>
            <directory>target/dependency</directory>
            <outputDirectory>artifacts</outputDirectory>
            <includes>
                <include>richfaces-components-*.jar</include>
            </includes>
        </fileSet>

        <!-- javadocs -->
        <fileSet>
            <directory>target/dependency/richfaces-components-a4j-javadoc-jar</directory>
            <outputDirectory>javadocs/richfaces-components-a4j/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>target/dependency/richfaces-components-rich-javadoc-jar</directory>
            <outputDirectory>javadocs/richfaces-components-rich/</outputDirectory>
        </fileSet>
        
        <!-- vdldoc -->
        <fileSet>
            <directory>target/vdldoc</directory>
            <outputDirectory>vdldoc</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>
